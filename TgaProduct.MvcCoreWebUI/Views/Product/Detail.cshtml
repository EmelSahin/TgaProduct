@using TgaProduct.Entities.Concrete

@model ProductCommentViewModel


@{
    ViewData["Title"] = "Detail";
}


<div class="page-content">
    <div class="container">
        <div class="product-details-top">
            <div class="row">
                <div class="col-md-6">
                    <div class="product-gallery product-gallery-vertical">
                        <div class="row">
                            <figure class="product-main-image">
                                <img id="product-zoom" src="~/themes/assets/images/products/single/1.jpg" data-zoom-image="~/themes/assets/images/products/single/1-big.jpg" alt="product image">

                                <a href="#" id="btn-product-gallery" class="btn-product-gallery">
                                    <i class="icon-arrows"></i>
                                </a>
                            </figure><!-- End .product-main-image -->

                            <div id="product-zoom-gallery" class="product-image-gallery">
                                <a class="product-gallery-item active" href="#" data-image="~/themes/assets/images/products/single/1.jpg" data-zoom-image="~/themes/assets/images/products/single/1-big.jpg">
                                    <img src="~/themes/assets/images/products/single/1-small.jpg" alt="product side">
                                </a>


                            </div><!-- End .product-image-gallery -->
                        </div><!-- End .row -->
                    </div><!-- End .product-gallery -->
                </div><!-- End .col-md-6 -->

                <div class="col-md-6">
                    <div class="product-details">
                        <h1 class="product-title">@Model.Products.Name</h1><!-- End .product-title -->

                        <div class="ratings-container">
                            <div class="ratings">
                                <div class="ratings-val" style="width: 80%;"></div><!-- End .ratings-val -->
                            </div><!-- End .ratings -->
                            <a class="ratings-text" href="#product-review-link" id="review-link">( 2 Reviews )</a>
                        </div><!-- End .rating-container -->

                        <div class="product-price">
                            @Model.Products.Price ₺
                        </div><!-- End .product-price -->

                        <div class="product-content">
                            <p>@Model.Products.Description </p>
                        </div><!-- End .product-content -->

                        <div class="details-filter-row details-row-size">
                            <label>Renk : </label>

                            <div class="product-nav product-nav-thumbs">
                                @Model.Products.Color
                            </div><!-- End .product-nav -->
                        </div><!-- End .details-filter-row -->

                        <div class="details-filter-row details-row-size">
                            <label for="size">Beden :</label>
                            <div class="product-nav product-nav-thumbs">
                                @Model.Products.Size
                            </div><!-- End .select-custom -->
                        </div><!-- End .details-filter-row -->

                        <div class="details-filter-row details-row-size">
                            <label for="qty">Qty:</label>
                            <div class="product-details-quantity">
                                <input type="number" id="qty" class="form-control" value="1" min="1" max="10" step="1" data-decimals="0" required>
                            </div><!-- End .product-details-quantity -->
                        </div><!-- End .details-filter-row -->

                        <div class="product-details-action">
                            <a href="#" class="btn-product btn-cart"><span>add to cart</span></a>

                            <div class="details-action-wrapper">
                                <a href="#" class="btn-product btn-wishlist" title="Wishlist"><span>Add to Wishlist</span></a>
                                <a href="#" class="btn-product btn-compare" title="Compare"><span>Add to Compare</span></a>
                            </div><!-- End .details-action-wrapper -->
                        </div><!-- End .product-details-action -->


                    </div><!-- End .product-details -->
                </div><!-- End .col-md-6 -->
            </div><!-- End .row -->
        </div><!-- End .product-details-top -->

        <div class="product-details-tab">
            <div class="tab-content">

                <div class="tab-pane fade show active" id="product-review-tab" role="tabpanel" aria-labelledby="product-review-link">
                    <div class="reviews">
                        <h3>Ürün Yorumları</h3>

                        @foreach (var item in Model.Comments)
                        {
                            <div class="review">
                                <div class="row no-gutters">
                                    <div class="col-auto">
                                        <h4><a href="#">@item.FullName</a></h4>
                                        <div class="ratings-container">
                                            <div class="ratings">
                                                <div class="ratings-val" style="width: 80%;"></div>
                                            </div>
                                        </div>
                                        <span class="review-date">@item.CreateDate.ToShortDateString()</span>
                                    </div>
                                    <div class="col">
                                        <h4>@item.Title</h4>

                                        <div class="review-content">
                                            <p>
                                                @item.Comment
                                            </p>
                                        </div>

                                        <div class="review-action">
                                            <a href="#"><i class="icon-thumbs-up"></i>Helpful (2)</a>
                                            <a href="#"><i class="icon-thumbs-down"></i>Unhelpful (0)</a>
                                        </div><!-- End .review-action -->
                                    </div><!-- End .col-auto -->
                                </div>
                                <!-- End .row -->
                            </div>
                        }

                    </div><!-- End .reviews -->
                </div><!-- .End .tab-pane -->
            </div><!-- End .tab-content -->
        </div><!-- End .product-details-tab -->


        <div class="page-content">
            <div class="checkout">
                <div class="container">
                    <div class="checkout-discount">
                        <div>
                            <input type="text" class="form-control" required="" id="checkout-discount-input">
                            <label for="checkout-discount-input" class="text-truncate">Have a coupon? <span>Click here to enter your code</span></label>
                        </div>
                    </div><!-- End .checkout-discount -->
                    <form method="post" action="/Comment/Add">
                        <div class="row">
                            <div class="col-lg-12">
                                <h2 class="checkout-title">Billing Details</h2><!-- End .checkout-title -->

                                <input type="hidden" id="HiddenId" name="HiddenId" value="@Model.Products.Id" required="">

                                <label>Company Name (Optional)</label>
                                <input type="text" class="form-control" name="FullName" required="">

                                <label>Country *</label>
                                <input type="text" class="form-control" required="" name="Title">

                                <label>Order notes (optional)</label>
                                <textarea class="form-control" cols="30" rows="4" name="Comment" placeholder="Notes about your order, e.g. special notes for delivery" required=""></textarea>
                            </div><!-- End .col-lg-9 -->
                        </div><!-- End .row -->


                        <input type="submit" value="Send Message" class="btn btn-success" />


                    </form>
                </div><!-- End .container -->
            </div><!-- End .checkout -->
        </div>


    </div><!-- End .container -->
</div><!-- End .page-content -->
