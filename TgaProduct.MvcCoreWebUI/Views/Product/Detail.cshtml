@using TgaProduct.Entities.Concrete

@model ProductCommentViewModel


@{
    ViewData["Title"] = "Detay";
}


<div class="page-content">
    <div class="container">
        <div class="row">
            <h3>
                <span>Ürün Detay</span>
            </h3>
        </div>
        <div class="product-details-top">
            <div class="row">
                <div class="col-md-6">
                    <div class="product-gallery product-gallery-vertical">
                        <div class="row">
                            <figure class="product-main-image">
                                <img id="product-zoom" src="@Model.Photo" data-zoom-image="@Model.Photo" alt="product image">

                                <a href="#" id="btn-product-gallery" class="btn-product-gallery">
                                    <i class="icon-arrows"></i>
                                </a>
                            </figure>

                            <div id="product-zoom-gallery" class="product-image-gallery">
                                <a class="product-gallery-item active" href="#" data-image="@Model.Photo" data-zoom-image="@Model.Photo">
                                    <img src="@Model.Photo" alt="product side">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="product-details">
                        <h1 class="product-title">@Model.Name</h1>

                        <div class="product-price">
                            @Model.Price ₺
                        </div>

                        <div class="product-content">
                            <p>@Model.Description </p>
                        </div>

                        <div class="details-filter-row details-row-size">
                            <label>Renk : </label>

                            <div class="product-nav product-nav-thumbs">
                                @Model.Color
                            </div>
                        </div>

                        <div class="details-filter-row details-row-size">
                            <label for="size">Beden :</label>
                            <div class="product-nav product-nav-thumbs">
                                @Model.Size
                            </div>
                        </div>

                        <div class="details-filter-row details-row-size">
                            <label for="qty">Adet:</label>
                            <div class="product-details-quantity">
                                <input type="number" id="qty" class="form-control" value="1" min="1" max="10" step="1" data-decimals="0" required>
                            </div>
                        </div>

                        <div class="product-details-action">
                            <a href="#" class="btn-product btn-cart"><span>Sepete Ekle</span></a>

                            <div class="details-action-wrapper">
                                <a href="#" class="btn-product btn-wishlist" title="Wishlist"><span>Beğen</span></a>
                                <a href="#" class="btn-product btn-compare" title="Compare"><span>Karşılaştır</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="product-details-tab">
            <div class="tab-content">

                <div class="tab-pane fade show active" id="product-review-tab" role="tabpanel" aria-labelledby="product-review-link">
                    <div class="reviews">
                        <h3>Ürün Yorumları</h3>

                        @foreach (var item in Model.Comments)
                        {
                            <div class="review">
                                <div class="row no-gutters">
                                    <div class="col-auto">
                                        <h4><a href="#">@item.FullName</a></h4>
                                        <span class="review-date">@item.CreateDate.ToShortDateString()</span>
                                    </div>
                                    <div class="col">
                                        <h4>@item.Title</h4> 

                                        <div class="review-content">
                                            <p>
                                                @item.Comment
                                            </p>
                                        </div>
                                    </div>
                                    <div>
                                        <h4>@item.State</h4>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>


        <div class="page-content">
            <div class="checkout">
                <div class="container">
                    <div class="checkout-discount">
                    </div>
                    <form method="post" action="/Comment/Add">
                        <div class="row">
                            <div class="col-lg-12">
                                <h2 class="checkout-title">Ürüne yorum yapın</h2>

                                <input type="hidden" id="ProductId" name="ProductId" value="@Model.Id" required="">

                                <label>İsim soyisim</label>
                                <input type="text" class="form-control" name="FullName" required="">

                                <label>Konu başlığı</label>
                                <input type="text" class="form-control" required="" name="Title">

                                <label>Yorum</label>
                                <textarea class="form-control" cols="30" rows="4" name="Comment" required=""></textarea>
                            </div>
                        </div>


                        <input type="submit" value="Yorum Gönder" class="btn btn-success" />


                    </form>
                </div>
            </div>
        </div>


    </div>
</div>
